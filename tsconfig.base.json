{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es2018", "dom", "WebWorker"],
        "module": "es2020",
        "target": "es2020",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.unit.ts",
        "lib",
        "node_modules",
        "spec",
        "test"
    ]
}
